@model Dailydive.Contracts.Dto.Domain.TaskHistory
@{
    ViewBag.Title = "EditTaskHistory";
}

<h2>EditTaskHistory</h2>
<div class="container">
    <form method="post" action="/Home/UpdateTaskHistory">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Task Name</th>
                    <th>Quantity</th>
                    <th>Measurement</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><input id="kendoDate" name="TaskDate" type="date" value="@Model.TaskDate" /></td>
                    <td>@Model.TaskName</td>
                    <td><input name="TaskQuantity" type="number" value="@Model.TaskQuantity" /></td>
                    <td>@Model.TaskMeasurement </td>
                    <td><input name="TaskDetails" type="text" value="@Model.TaskDetails" /></td>                    
                </tr>                
            </tbody>
        </table>
        <input name="TaskHistoryId" type="hidden" value="@Model.TaskHistoryId" />
        <input type="submit" class="btn btn-success" />
    </form>
</div>
